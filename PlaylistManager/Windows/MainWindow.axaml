<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="using:PlaylistManager.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="PlaylistManager.Windows.MainWindow"
        Title="PlaylistManager"
        Background="Transparent"
        Icon="/Icons/Logo.ico">
        <Grid>
                <local:FlowCoordinator />
                <Border IsVisible="{Binding ModalShown}" Background="#80000000" PointerPressed="ClickOff">
                </Border> 
        </Grid>
</Window>
