<ContentControl xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" x:Class="PlaylistManager.UserControls.StringSetting"
                xmlns:userControls="clr-namespace:PlaylistManager.UserControls">
    <ContentControl.Styles>
        <Style Selector="userControls|StringSetting">
            <Setter Property="Template">
                <ControlTemplate>
                    <DockPanel>
                        <TextBlock DockPanel.Dock="Left" Text="{TemplateBinding SettingName}" FontSize="25" FontWeight="SemiLight" HorizontalAlignment="Left" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
                        <TextBox DockPanel.Dock="Right" Text="{TemplateBinding SettingValue, Mode=TwoWay}" FontSize="25" FontWeight="Light" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="100,0,0,0" />
                    </DockPanel>
                </ControlTemplate>
            </Setter>
        </Style>
    </ContentControl.Styles>
</ContentControl>
