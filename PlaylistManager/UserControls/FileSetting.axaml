<ContentControl xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" x:Class="PlaylistManager.UserControls.FileSetting"
                xmlns:userControls="clr-namespace:PlaylistManager.UserControls">
        <ContentControl.Styles>
            <Style Selector="userControls|FileSetting">
                <Setter Property="Template">
                    <ControlTemplate>
                        <Grid ColumnDefinitions="Auto, 10*, 0.1*, Auto">
                            <TextBlock Grid.Column="0" Text="{TemplateBinding SettingName}" FontSize="30" FontWeight="SemiLight" VerticalAlignment="Center" />
                            <TextBlock Grid.Column="1" Text="{TemplateBinding SettingValue}" FontSize="30" FontWeight="Light" HorizontalAlignment="Right" VerticalAlignment="Center" />
                            <Button Grid.Column="3" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="25" Click="OnClick">üìÅ</Button>
                        </Grid>
                    </ControlTemplate>
                </Setter>
            </Style>
        </ContentControl.Styles>
</ContentControl>