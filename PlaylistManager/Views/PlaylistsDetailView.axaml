<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="PlaylistManager.Views.PlaylistsDetailView">
    <DockPanel>
        <Border Background="#80808080" DockPanel.Dock="Top">
            <StackPanel>
                <Button Padding="20" HorizontalAlignment="Left" Click="OnBackClick">&lt;</Button>
                <StackPanel Orientation="Horizontal" Spacing="30">
                    <Image Width="256" Stretch="Uniform" Source="{Binding CoverImage}" />
                    <StackPanel VerticalAlignment="Bottom" Spacing="10">
                        <TextBlock Text="{Binding Title}" FontSize="50" FontWeight="Bold" />
                        <TextBlock Text="{Binding Author}" FontSize="25" FontWeight="Light" />
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>
        
    </DockPanel></UserControl>
