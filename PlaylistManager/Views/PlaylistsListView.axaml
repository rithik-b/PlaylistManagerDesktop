<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="PlaylistManager.Views.PlaylistsListView">
    <DockPanel>
        <Grid Background="#808080" DockPanel.Dock="Top" IsVisible="{Binding IsSubfolder}">
            <Button Padding="20" HorizontalAlignment="Left" Click="OnClick">&lt;</Button>
            <TextBlock Text="{Binding FolderTitle}" Padding="20" HorizontalAlignment="Center" VerticalAlignment="Center" />
        </Grid>
        <ListBox Items="{Binding SearchResults}" SelectedItem="{Binding SelectedPlaylistOrManager}" Background="Transparent" Margin="0 20" DoubleTapped="OnDoubleTapped">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
        </ListBox>
    </DockPanel>
</UserControl>
